generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  imageUrl  String?
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}